<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resetpass.ResetPassword">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="800dp">


                <FrameLayout
                    android:id="@+id/fl_header_image"
                    android:layout_width="408dp"
                    android:layout_height="233dp"


                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/ic_cart_background" />

                    <ImageView
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/food2"
                        android:textAlignment="center" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="325dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="476dp"
                    android:text="Ensure the two password matches"
                    android:textAlignment="center"
                    android:textColor="@color/ic_cart_background"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="399dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="64dp"
                    android:ems="10"
                    android:paddingStart="10dp"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <EditText
                    android:id="@+id/et_cpass"
                    android:layout_width="399dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="40dp"
                    android:ems="10"
                    android:paddingStart="10dp"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_pass" />

                <Button
                    android:id="@+id/btnupdate"
                    android:layout_width="417dp"
                    android:layout_height="66dp"
                    android:background="@color/ic_cart_background"
                    android:text="Update"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_cpass"
                    app:layout_constraintVertical_bias="0.46" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>